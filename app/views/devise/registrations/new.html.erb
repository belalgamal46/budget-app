<section class="min-vh-100 bg-splash">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), autocomplete: true) do |f| %>
    <%= render 'layouts/navbar', title: 'REGISTER', form: f, submit_button_text: 'Next' %>
    <div class="px-2">
      <%= render "devise/shared/error_messages", resource: resource %>
    </div>

    <div class="bg-white border-bottom border-top mb-3">
      <div class="px-3">
        <%= f.text_field :name, autofocus: true, required: true, placeholder: "Full name", class: "w-100 rounded-0 border-0 border-bottom p-2 outline-none proxima-nova-thin" %>
      </div>

      <div class="px-3">
        <%= f.email_field :email, autocomplete: "email", required: true, placeholder: "Email", class: "w-100 rounded-0 border-0 border-bottom p-2 outline-none proxima-nova-thin" %>
      </div>

      <div class="px-3">
        <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: "Password", class: "w-100 rounded-0 border-0 border-bottom p-2 outline-none proxima-nova-thin" %>
      </div>

      <div class="px-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: "Confirm password", class: "w-100 rounded-0 border-0 p-2 outline-none proxima-nova-thin" %>
      </div>
    </div>
  <% end %>

  <%= render "devise/shared/links", forget_password: false, login: false, register: false, confirmation: false %>
</section>